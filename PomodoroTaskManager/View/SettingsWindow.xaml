<Window x:Class="PomodoroTaskManager.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroTaskManager.View"
        mc:Ignorable="d"
        Title="Settings..." Height="150" Width="300"
        ResizeMode="NoResize" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="5" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Pomodoro Interval" Grid.Row="0" Grid.Column="0" />
                <TextBox x:Name="TxtPomodoroInterval" Grid.Row="0" Grid.Column="1" />

                <Label Content="Break Interval" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="TxtBreakInterval" Grid.Row="1" Grid.Column="1" />
 
                <Label Content="Long Break Interval" Grid.Row="2" Grid.Column="0" />
                <TextBox x:Name="TxtLongBreakInterval" Grid.Row="2" Grid.Column="1" />

                <Button Content="Save" Grid.Row="4" Grid.Column="1" Width="50" Height="20" Click="Button_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
