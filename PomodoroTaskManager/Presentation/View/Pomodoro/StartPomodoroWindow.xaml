<Window x:Class="PomodoroTaskManager.Presentation.View.Pomodoro.StartPomodoroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroTaskManager.Presentation.View.Pomodoro"
        mc:Ignorable="d"
        Title="Start Pomodoro" Height="160" Width="400">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- 0行目 -->
        <Label Content="Select Task" Grid.Row="0" />
        <!-- 1行目 空行 -->
        <!-- 2行目 -->
        <ComboBox x:Name="SelectCategoryComboBox" Width="380" Height="30" Grid.Row="2" HorizontalAlignment="Left"
                          IsEditable="true" IsReadOnly="False"/>
        <!-- 3行目 空行 -->
        <!-- 4行目 -->
        <Button x:Name="BtnStartPomodoro" Content="Start" Width="80" Height="30" HorizontalAlignment="Left" Grid.Row="4"/>

    </Grid>
</Window>
